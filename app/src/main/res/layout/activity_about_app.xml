<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawer_back_ground"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/logo"
        android:layout_height="350dp"
        android:id="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/info_about"
        android:text="تطبيق رواد التطوع يمكنك من المشاركة في فرص الخير وتطوير نفسك ونفع مجتمعك .."
        android:textSize="22sp"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginTop="37dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view"
        android:textColor="#000000" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20sp"
        android:text="الإصدار 1.0"
        android:padding="9dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#5c2103" />

</RelativeLayout>