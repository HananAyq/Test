        android:textSize="25sp"
        android:id="@+id/textView7" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" رقم التواصل : "
        android:textSize="25sp"
