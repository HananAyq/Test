<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:text="تطوع من أجل لغتك "
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="25sp"
                android:layout_margin="20dp"
                />
            <TextView
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:text="مرحباً بمحبي اللغة العربية الطامحين إلى إعادة مجدها إليكم سبع عشرة فكرة عملية لخدمة لغتنا الجميلة ...."
                android:textSize="17sp"
                android:id="@+id/text2"
                android:layout_below="@+id/text1"
                android:layout_toEndOf="@+id/view"
                android:layout_toRightOf="@+id/view"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="6"
                android:textSize="26sp"
                android:layout_height="wrap_content"
                android:id="@+id/six"
                android:padding="4dp"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:src="@drawable/ppl"
                android:id="@+id/ppl"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/six"
                android:layout_toEndOf="@+id/six"
                android:layout_margin="2dp"
                android:padding="2dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/in"
                android:layout_height="40dp"
                android:id="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/text1"
                android:layout_toLeftOf="@+id/text1"
                android:layout_toStartOf="@+id/text1"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:text="جزيل للتحرير الكتابي"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="25sp"
                android:layout_margin="20dp"
                />
            <TextView
                android:layout_width="250dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:text="تعلن جزيل للمنظمات الخيرية النامية عن وجود شاغر لديها في قسم الترجمة , الشؤون الإداريه , وتفتح أبوابها .."
                android:textSize="17sp"
                android:layout_height="90dp"
                android:id="@+id/text3"
                android:layout_below="@+id/text4"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/end"
                android:padding="4dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/text4"
                android:layout_toLeftOf="@+id/text4"
                android:layout_toStartOf="@+id/text4"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:src="@drawable/ppl"
                android:id="@+id/ppl2"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/two"
                android:layout_toEndOf="@+id/two"
                android:padding="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="2"
                android:textSize="26sp"
                android:layout_height="wrap_content"
                android:id="@+id/two"
                android:padding="4dp"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="200dp"
                android:id="@+id/opp3"
                android:text="تطوع من أجل لغتك "
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="25sp"
                android:layout_margin="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:text="في ظل الأزمات الصحية التي نمر بها في مجتمعنا لابد من أن نتخذ إجراءات عاجلة ونصنع ثورة للأمراض المزمنه ..."
                android:textSize="17sp"
                android:id="@+id/text5"
                android:layout_below="@+id/opp3"
                android:layout_toEndOf="@+id/view33"
                android:layout_toRightOf="@+id/view33"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="9"
                android:textSize="26sp"
                android:layout_height="wrap_content"
                android:id="@+id/nine"
                android:padding="4dp"
                android:layout_alignParentBottom="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/in"
                android:layout_height="40dp"
                android:id="@+id/view33"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:src="@drawable/ppl"
                android:id="@+id/ppl3"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/nine"
                android:layout_toEndOf="@+id/nine"
                android:padding="2dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>