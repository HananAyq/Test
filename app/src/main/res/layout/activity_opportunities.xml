<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#76cffb">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        android:layout_marginTop="15dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/opp_title"
                android:textColor="#000000"
                tools:text="تطوع من أجل لغتك "
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="25sp"
                android:layout_margin="20dp" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                tools:text="مرحباً بمحبي اللغة العربية الطامحين إلى إعادة مجدها إليكم سبع عشرة فكرة عملية لخدمة لغتنا الجميلة ...."
                android:textSize="17sp"
                android:id="@+id/opp_text"
                android:layout_below="@+id/opp_title"
                android:layout_toEndOf="@+id/available"
                android:layout_toRightOf="@+id/available"
                android:textColor="#442200"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                tools:text="6"
                android:textSize="26sp"
                android:layout_height="wrap_content"
                android:id="@+id/six"
                android:padding="10dp"
                android:layout_alignParentBottom="true" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=" مزيد من المعلومات "
                android:textSize="20sp"
                android:id="@+id/more_info"
                android:background="#c46600"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=" انضمام "
                android:textSize="20sp"
                android:id="@+id/join"
                android:background="#c46600"
                android:textColor="#ffffff"
                android:layout_toStartOf="@+id/more_info"
                android:layout_toLeftOf="@+id/more_info"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@drawable/ppl"
                android:id="@+id/ppl"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/six"
                android:layout_toEndOf="@+id/six"
                android:layout_margin="5dp"
                android:padding="2dp" />

            <ImageView
                android:layout_width="wrap_content"
                tools:src="@drawable/in"
                android:layout_height="40dp"
                android:id="@+id/available"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/opp_title"
                android:layout_toLeftOf="@+id/opp_title"
                android:layout_toStartOf="@+id/opp_title" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

